<StackPanel x:Class="TextGameEditor.Condition.Properties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextGameEditor.Condition"
              mc:Ignorable="d" d:DesignWidth="800" Grid.Column="1" >
    <Label Margin="0, 20, 0, 0" Foreground="White" x:Name="optionLabel">Conditions</Label>
    <TabControl x:Name="conditions" Height="150" Background="DarkGray">
    </TabControl>
    <Button Height="21" Background="#329528" Foreground="White" Click="RequestForNewCondition" >+</Button>
    <Label Margin="0,20, 0,0" Foreground="White">True case descendant</Label>
    <Button x:Name="connectionTrueButton" Click="SetTrueConnection" Margin="0,5, 0,0">Connect branch true</Button>
    <Label Margin="0,5, 0,0" Foreground="White">True case descendant</Label>
    <Button x:Name="connectionFalseButton" Click="SetFalseConnection" Margin="0,5, 0,0">Connect branch false</Button>
    <Button Content="Remove node" Background="DarkRed" Foreground="White" Height="25" Margin="0,20, 0,0" Click="RemoveNode"/>
</StackPanel>
